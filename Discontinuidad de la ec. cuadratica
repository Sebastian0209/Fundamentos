#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main () {
	float a,b,c,x;
	cout<<"Ingrese el valo de a: ";
	cin>>a;
	cout<<"Ingrese el valor de b: ";
	cin>>b;
	cout<<"Ingrese el valor de c: ";
	cin>>c;
	x=(b*b)-(4*a*c);
	cout<<"La discontinuidad es: "<<x<<endl;
	getch();
}
